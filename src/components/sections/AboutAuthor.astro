// You can fetch author data from a CMS, API, or define it here
const author = {
  name: "Tiago Boas",
  avatar: "https://github.com/tiagovilasboas.png",
  bio: "Sou front-end engineer há 18 anos, focado em React, TypeScript e arquitetura escalável. Já liderei squads em bancos digitais, fintechs e SaaS, sempre guiado por métricas de negócio. Criei módulos reutilizáveis para Smart TVs, acelerei checkouts de e-commerce e entreguei microserviços Go que salvaram um MVP em tempo recorde.",
  github: "https://github.com/tiagovilasboas",
  linkedin: "https://www.linkedin.com/in/tiago-vilas-boas-934790153/",
};
---
<section class="author-section">
  <div class="container">
    <h2 class="section-title">Sobre o Autor</h2>
    <div class="author-card">
      <img src={author.avatar} alt={`Avatar de ${author.name}`} class="avatar" />
      <div class="author-info">
        <h3 class="author-name">{author.name}</h3>
        <p class="author-bio">{author.bio}</p>
        <div class="author-links">
          <a href={author.github} target="_blank" rel="noopener noreferrer">GitHub</a>
          <a href={author.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .author-section {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }
  .container {
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }
  .section-title {
    text-align: center;
    margin-bottom: 2.5rem;
    font-size: 1.875rem; /* 30px */
    line-height: 2.25rem; /* 36px */
    font-weight: 700;
  }
  .author-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }
  @media (min-width: 768px) {
    .author-card {
      flex-direction: row;
      text-align: left;
      align-items: flex-start;
    }
  }
  .avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 3px solid var(--primary);
    object-fit: cover;
  }
  .author-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .author-name {
    font-size: 1.5rem; /* 24px */
    font-weight: 700;
  }
  .author-bio {
    color: var(--muted-foreground);
    line-height: 1.7;
  }
  .author-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }
  @media (min-width: 768px) {
    .author-links {
      justify-content: flex-start;
    }
  }
  .author-links a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }
  .author-links a:hover {
    color: var(--foreground);
  }
</style> 