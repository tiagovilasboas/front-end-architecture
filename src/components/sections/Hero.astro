---
import GitHubButtons from './GitHubButtons.astro';

interface Props {
  stars: number;
  forks: number;
}

const { stars, forks } = Astro.props;
---
<section class="hero-section">
  <div class="container">
    <h1 class="title">Arquitetura Front-End Moderna</h1>
    <p class="subtitle">
      Uma coleção selecionada de padrões e práticas testadas em batalha para construir aplicações front-end modernas, sustentáveis e escaláveis.
    </p>
    <GitHubButtons stars={stars} forks={forks} />
  </div>
</section>

<style>
  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    padding: 3rem 1rem;
  }
  .container {
    width: 100%; /* O padding do hero-section controla a distância das bordas */
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    width: 86%;
    max-width: 56rem;
  }
  .title {
    font-size: 2.25rem; /* 36px */
    line-height: 2.5rem; /* 40px */
    font-weight: 800;
    letter-spacing: -0.025em;
  }
  @media (min-width: 640px) {
    .title {
      font-size: 3rem; /* 48px */
      line-height: 1;
    }
  }
  .subtitle {
    color: var(--muted-foreground);
    font-size: 1.125rem; /* 18px */
    line-height: 1.75rem; /* 28px */
  }
</style> 