---
import type { CollectionEntry } from 'astro:content';

interface Props {
  patterns: CollectionEntry<'patterns'>[];
}

const { patterns } = Astro.props;
---

<ul class="patterns-list">
  {patterns.map((pattern) => (
    <li>
      <a href={`/patterns/${pattern.slug}`} class="pattern-link">
        <div class="link-content">
          <span class="title">{pattern.data.title}</span>
          <span class="description">{pattern.data.description}</span>
        </div>
        <span class="arrow">â†’</span>
      </a>
    </li>
  ))}
</ul>

<style>
.patterns-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
}

.pattern-link {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.25rem 0;
  border-bottom: 1px solid var(--border);
  text-decoration: none;
  color: var(--foreground);
  transition: background-color 0.2s ease;
}

.pattern-link:hover .title {
  color: var(--primary);
}

.link-content {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.title {
  font-weight: 600;
  font-size: 1.125rem;
  transition: color 0.2s ease;
}

.description {
  font-size: 0.95rem;
  color: var(--muted-foreground);
}

.arrow {
  font-size: 1.5rem;
  color: var(--muted-foreground);
  transition: transform 0.2s ease;
}

.pattern-link:hover .arrow {
  transform: translateX(4px);
  color: var(--primary);
}
</style> 