---
import { Rocket, Menu } from 'lucide-astro';
import ThemeToggle from '../ui/ThemeToggle.astro';
import Seo from '../utils/Seo.astro';
import Sidebar from '../sections/Sidebar.astro';
import { ViewTransitions } from 'astro:transitions';
import '../../styles/globals.css';
import 'prism-themes/themes/prism-vsc-dark-plus.css';
import { SITE_CONFIG } from '../../config';

const { frontmatter = {}, ...rest } = Astro.props;
const propsForSeo = { ...rest, ...frontmatter };
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
    <Seo {...propsForSeo} />
    <ViewTransitions />

    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
    </script>
	</head>
	<body>
    <div class="app-shell">
      <header class="header">
        <div class="header-left">
          <button id="menu-toggle" class="menu-button">
            <Menu size={24} />
          </button>
          <a href="/" class="logo">
            <Rocket size={24} />
            <span class="logo-text">Front-end Architecture Reference</span>
          </a>
        </div>
        <ThemeToggle />
      </header>
      
      <div class="main-container">
        <Sidebar />
        <main class="main-content">
          <slot />
        </main>
      </div>
    </div>
    <script>
      document.getElementById('menu-toggle').addEventListener('click', () => {
        document.body.classList.toggle('sidebar-visible');
      });
    </script>
	</body>
</html>

<style>
  :root {
    --header-height: 4rem;
    --sidebar-width: 280px;
    --footer-height: 3rem;
  }

  .app-shell {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .header {
    height: var(--header-height);
    flex-shrink: 0;
    position: sticky;
    top: 0;
    z-index: 50;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 1.5rem;
    background-color: var(--background);
    border-bottom: 1px solid var(--border);
  }

  .main-container {
    display: flex;
    flex: 1;
    overflow: hidden;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem; /* Aumentei o espaçamento */
    font-weight: 600;
    text-decoration: none;
    color: var(--foreground);
    font-size: 1rem; /* Defini um tamanho base */
  }
  
  .logo-text {
    display: none;
  }

  @media(min-width: 768px) {
    .logo-text {
      display: inline;
    }
  }

  /* Ajuste para telas muito pequenas onde o nome completo pode quebrar */
  @media(max-width: 420px) {
    .logo-text {
      font-size: 0.9rem;
    }
  }

  .main-content {
    flex: 1;
    overflow-y: auto; /* Permite scroll apenas no conteúdo */
    padding: 2.5rem; /* Aumenta o respiro */
    width: 100%;
    max-width: 90rem; /* Limita a largura do conteúdo */
    margin: 0 auto; /* Centraliza o conteúdo */
  }

  /* Sidebar Styles */
  .sidebar {
    flex-shrink: 0;
    width: var(--sidebar-width);
    background-color: var(--secondary);
    border-right: 1px solid var(--border);
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    height: 100vh;
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
    z-index: 40;
    overflow-y: auto;
  }

  body.sidebar-visible .sidebar {
    transform: translateX(0);
  }

  @media (min-width: 1024px) {
    .sidebar {
      position: sticky;
      height: calc(100vh - var(--header-height));
      top: var(--header-height);
    }
  }

  .menu-button {
    background: none;
    border: none;
    color: inherit;
    padding: 0.5rem;
    margin-right: 0.5rem;
    cursor: pointer;
    display: block;
  }

  @media (min-width: 1024px) {
    .menu-button {
      display: none;
    }
  }

  .header-left {
    display: flex;
    align-items: center;
  }
</style> 