---
import { Rocket, Menu } from 'lucide-astro';
import ThemeToggle from '../ui/ThemeToggle.astro';
import Seo from '../utils/Seo.astro';
import Sidebar from '../sections/Sidebar.astro';
import { ViewTransitions } from 'astro:transitions';
import '../../styles/global.css';
import { SITE_CONFIG } from '../../config';

const { frontmatter = {}, ...rest } = Astro.props;
const propsForSeo = { ...rest, ...frontmatter };
---
<html lang="en" data-theme="booster">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
    <Seo {...propsForSeo} />
    <ViewTransitions />

    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
    </script>
	</head>
	<body>
    <div class="drawer min-h-screen">
      <input id="sidebar-toggle" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <header class="app-bar bg-base-100 border-b">
          <div class="app-bar-start">
            <label for="sidebar-toggle" class="btn btn-square btn-ghost md:hidden" aria-label="Abrir menu">
              <Menu size={24} />
            </label>
          <a href="/" class="btn btn-ghost gap-2 text-xl">
            <Rocket size={24} />
            <span class="hidden sm:inline">Front-end Architecture Reference</span>
          </a>
        </div>
        <div class="app-bar-end">
          <ThemeToggle />
        </div>
        </header>

        <main class="p-6 md:p-10 flex-1">
          <slot />
        </main>
      </div>
      <div class="drawer-side">
        <label for="sidebar-toggle" class="drawer-overlay"></label>
        <Sidebar />
      </div>
    </div>
	</body>
</html>

