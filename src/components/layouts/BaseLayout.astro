---
import { Rocket, Menu } from 'lucide-astro';
import ThemeToggle from '../ui/ThemeToggle.astro';
import Seo from '../utils/Seo.astro';
import Sidebar from '../sections/Sidebar.astro';
import { ViewTransitions } from 'astro:transitions';
import '../../styles/global.css';
import { SITE_CONFIG } from '../../config';

const { frontmatter = {}, ...rest } = Astro.props;
const propsForSeo = { ...rest, ...frontmatter };
---
<html lang="en" data-theme="rocket">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
    <Seo {...propsForSeo} />
    <ViewTransitions />

    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
    </script>
	</head>
	<body>
    <div id="app-shell" class="app-shell">
      <header class="header">
        <div class="header-left">
          <button id="menu-toggle" class="menu-button" aria-label="Abrir menu">
            <Menu size={24} />
          </button>
          <a href="/" class="logo">
            <Rocket size={24} />
            <span class="logo-text">Front-end Architecture Reference</span>
          </a>
        </div>
        <ThemeToggle />
      </header>

      <Sidebar />

      <main class="main-content">
        <slot />
      </main>
      
      <div id="sidebar-overlay" class="sidebar-overlay"></div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const menuToggle = document.getElementById('menu-toggle');
        const overlay = document.getElementById('sidebar-overlay');
        const appShell = document.getElementById('app-shell');

        const toggleSidebar = () => {
          appShell.classList.toggle('sidebar-open');
        };

        menuToggle.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', toggleSidebar);
        
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && appShell.classList.contains('sidebar-open')) {
            toggleSidebar();
          }
        });
      });
    </script>
	</body>
</html>

