---
// src/components/interactive/PatternCard.astro
import type { CollectionEntry } from 'astro:content';
import DynamicIcon from '../DynamicIcon.astro';

interface Props {
  pattern: CollectionEntry<'patterns'>;
}

const { pattern } = Astro.props;
const { title, description, icon } = pattern.data;
---
<a href=`/patterns/${pattern.slug}/` class="pattern-card">
  <div class="card-icon">
    <DynamicIcon name={icon} size={24} />
  </div>
  <div class="card-content">
    <h4 class="card-title">{title}</h4>
    <p class="card-description">{description}</p>
  </div>
</a>

