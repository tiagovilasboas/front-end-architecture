---
import { Icon } from 'lucide-astro';

export interface Pattern {
  slug: string;
  name: string;
  tagline: string;
  icon: string; // Should be a valid lucide-astro icon name
}

const { patterns } = Astro.props as { patterns: Pattern[] };
---

<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {patterns.map((pattern) => (
    <a 
      href={`/patterns/${pattern.slug}`} 
      class="group block rounded-lg border bg-card p-6 text-card-foreground shadow-sm transition-all duration-200 hover:-translate-y-1 hover:shadow-lg"
    >
      <div class="flex items-center gap-4">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg border bg-muted">
          <Icon name={pattern.icon} class="h-6 w-6 text-muted-foreground" />
        </div>
        <h3 class="text-xl font-semibold tracking-tight">{pattern.name}</h3>
      </div>
      <p class="mt-4 text-sm text-muted-foreground">{pattern.tagline}</p>
    </a>
  ))}
</div> 