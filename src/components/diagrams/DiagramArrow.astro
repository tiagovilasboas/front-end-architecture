---
// src/components/diagrams/DiagramArrow.astro
interface Props {
  label: string;
  variant?: 'solid' | 'dashed';
}

const { label, variant = 'solid' } = Astro.props;
---
<div class:list={["diagram-arrow", variant]}>
  <div class="arrow-line"></div>
  <div class="arrow-head"></div>
  <span class="arrow-label">{label}</span>
</div>

