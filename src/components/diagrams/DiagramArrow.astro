---
// src/components/diagrams/DiagramArrow.astro
interface Props {
  label: string;
  variant?: 'solid' | 'dashed';
}

const { label, variant = 'solid' } = Astro.props;
---
<div class:list={["diagram-arrow", variant]}>
  <div class="arrow-line"></div>
  <div class="arrow-head"></div>
  <span class="arrow-label">{label}</span>
</div>

<style>
.diagram-arrow {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  min-width: 100px;
  height: 40px; /* Altura para o label */
}

.arrow-line {
  position: absolute;
  width: 100%;
  height: 2px;
  background-color: var(--border);
}

.diagram-arrow.dashed .arrow-line {
  background-image: linear-gradient(to right, var(--border) 50%, transparent 50%);
  background-size: 10px 2px;
  background-color: transparent;
}

.arrow-head {
  position: absolute;
  right: -1px;
  width: 0;
  height: 0;
  border-top: 6px solid transparent;
  border-bottom: 6px solid transparent;
  border-left: 8px solid var(--border);
}

.arrow-label {
  position: relative;
  background-color: var(--background);
  color: var(--muted-foreground);
  padding: 0.1rem 0.5rem;
  font-size: 0.75rem;
  border-radius: 0.25rem;
  z-index: 1;
}
</style> 